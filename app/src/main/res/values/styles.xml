<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
        <item name="textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyMaterialTheme.WithTitle" parent="AppTheme">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="android:statusBarColor">#C5C5C5</item>
        <item name="colorPrimaryDark">#C5C5C5</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.Kasir" parent="AppTheme.Light">
        <item name="colorAccent">@color/colorKasir</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Light">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.DepaymentFull" parent="AppTheme">
        <item name="android:windowBackground">@color/colorDepayment</item>
        <item name="android:statusBarColor">@color/colorDepayment</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowClipToOutline">false</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myDialogMenu" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="CalendarTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CalendarTheme.Kasir" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorKasir</item>
        <item name="colorPrimaryDark">@color/colorKasir</item>
        <item name="colorAccent">@color/colorKasir</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCustomTabLayout.Bold" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance.Bold</item>
    </style>

    <style name="MyCustomTextAppearance.Bold" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>


    <style name="MButtonPrimary" parent="TextAppearance.AppCompat.Widget.Button">
        <!--        <item name="android:letterSpacing">0.1</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/_34sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:background">@drawable/button_style_ticket</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/_1sdp</item>
    </style>

</resources>
