<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_16sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:contentPadding="@dimen/_12sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_total_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textSize="@dimen/_16ssp"
            android:layout_marginStart="@dimen/_32sdp"
            app:layout_constraintEnd_toStartOf="@+id/tv_total_user"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_total_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toStartOf="@+id/tv_total_area"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_total_promo"
            app:layout_constraintTop_toTopOf="@id/tv_total_promo"
            tools:text="810" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_total_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textSize="@dimen/_16ssp"
            android:layout_marginEnd="@dimen/_32sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_total_user"
            app:layout_constraintTop_toTopOf="@id/tv_total_user"
            tools:text="8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_total_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="center"
            android:maxWidth="@dimen/_50sdp"
            android:text="Promo Berjalan"
            android:textColor="@color/textGrey"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="@id/tv_total_promo"
            app:layout_constraintStart_toStartOf="@id/tv_total_promo"
            app:layout_constraintTop_toBottomOf="@id/tv_total_promo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_total_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="center"
            android:maxWidth="@dimen/_50sdp"
            android:text="Target Pengguna"
            android:textColor="@color/textGrey"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="@id/tv_total_user"
            app:layout_constraintStart_toStartOf="@id/tv_total_user"
            app:layout_constraintTop_toBottomOf="@id/tv_total_user" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_total_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="center"
            android:maxWidth="@dimen/_50sdp"
            android:text="Area\nAktif"
            android:textColor="@color/textGrey"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="@id/tv_total_area"
            app:layout_constraintStart_toStartOf="@id/tv_total_area"
            app:layout_constraintTop_toBottomOf="@id/tv_total_area" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>